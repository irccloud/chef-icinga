log_facility=daemon
pid_file=/var/run/nagios/nrpe.pid
server_port=5666
nrpe_user=nagios
nrpe_group=nagios
allowed_hosts=<%=@icinga_servers.join(",")%>
dont_blame_nrpe=0
debug=0
command_timeout=60
connection_timeout=300
command[check_disk_root]=/usr/lib/nagios/plugins/check_disk -w 20% -c 10% /
command[check_ntp_time]=/usr/lib/nagios/plugins/check_ntp_time -H 127.0.0.1
include=/etc/nagios/nrpe_local.cfg
include_dir=/etc/nagios/nrpe.d/
